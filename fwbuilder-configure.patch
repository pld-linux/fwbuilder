+#-*- mode: makefile; tab-width: 4; -*-
+#
+######### fwbuilder2/qmake.inc.in
+#
+
+TEMPLATE	=app
+
+DEFINES      += $$(DEFINES)
+INCLUDEPATH  += ../.. $$(INCLUDEPATH)
+LANGUAGE      = C++
+UI_DIR        = ui
+
+unix {
+!macx {
+	UI_DIR = .ui
+    MOC_DIR = .moc
+    OBJECTS_DIR = .obj
+
+	PREFIX                  = @PREFIX@
+	DOCDIR                  = @DOCDIR@
+	MANDIR                  = @MANDIR@
+	LIBS_FWCOMPILER         = @LIBFWBUILDER_LIBS_FWCOMPILER@
+	LIBS_FWBUILDER          = @LIBFWBUILDER_LIBS_FWBUILDER@
+
+	target.path             = $(DDIR)$$PREFIX/bin
+	res.path                = $(DDIR)@RES_DIR@
+	res_os.path             = $(DDIR)@RES_DIR@/os
+	res_platform.path       = $(DDIR)@RES_DIR@/platform
+
+	CONFIG                 += qt thread rtti stl warn_on debug
+	INCLUDEPATH            += @LIBFWBUILDER_INCLUDEPATH@
+
+	LIBS                   += $$LIBS_FWBUILDER @LIBS@
+
+	PKGLOCALEDIR            = $$res.path/locale
+
+	QMAKE_CFLAGS_DEBUG     += -Wno-unused-parameter
+	QMAKE_CFLAGS_RELEASE   += -Wno-unused-parameter
+	QMAKE_CXXFLAGS_DEBUG   += -Wno-unused-parameter @CXXFLAGS@
+	QMAKE_CXXFLAGS_RELEASE += -Wno-unused-parameter @CXXFLAGS@
+}
+}
+
+exists(qmake2.inc) {
+  include( qmake2.inc)
+}
+
+INSTALLS   += target
